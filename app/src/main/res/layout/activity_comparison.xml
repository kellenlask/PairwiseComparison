<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.bk.fm.pairwisecomparison.Comparison">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="14"
        android:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/comparisons"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/whichIsBetter"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_columnSpan="2"/>

        <Space
            android:layout_width="13dp"
            android:layout_height="25dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="176dp"
            android:id="@+id/itemOne"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|left"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/or"
            android:id="@+id/textView3"
            android:layout_row="5"
            android:layout_column="0"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical|center"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="176dp"
            android:id="@+id/itemTwo"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|right"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:id="@+id/progressBar"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"/>

    </GridLayout>
</RelativeLayout>
